{
	"name": "mitarbeiter",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"electron:dev": "concurrently \"npm run dev\" \"electron .\"",
		"electron:build": "cross-env ADAPTER_BASE='' npm run build && electron-builder -m",
		"electron:build:win": "cross-env ADAPTER_BASE='' npm run build && electron-builder -w"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/jszip": "^3.4.0",
		"@types/uuid": "^10.0.0",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^40.6.0",
		"electron-builder": "^26.8.1",
		"electron-serve": "^3.0.1",
		"eslint": "^10.0.0",
		"eslint-plugin-svelte": "^3.15.0",
		"prettier": "^3.8.1",
		"sass": "^1.97.3",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"date-fns": "^4.1.0",
		"idb": "^8.0.3",
		"jszip": "^3.10.1",
		"lucide-svelte": "^0.575.0",
		"pdf-lib": "^1.17.1",
		"uuid": "^13.0.0",
		"zod": "^4.3.6"
	},
	"build": {
		"appId": "com.celina.mitarbeiter",
		"productName": "Mitarbeiter Tracking",
		"files": [
			"build/**/*",
			"electron/**/*",
			"package.json"
		],
		"directories": {
			"output": "dist"
		},
		"mac": {
			"category": "public.app-category.productivity"
		},
		"win": {
			"target": "nsis"
		}
	}
}
